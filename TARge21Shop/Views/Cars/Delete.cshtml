@model TARge21Shop.Models.Car.CarDeleteViewModel

<h1>Delete</h1>

<div>

	<h4>Car</h4>
	<hr />

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Id)
		</div>

		<div class="form-group row">
			<label asp-for="Mark" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Mark)
		</div>

		<div class="form-group row">
			<label asp-for="Model" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Model)
		</div>

		<div class="form-group row">
			<label asp-for="Type" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Type)
		</div>

		<div class="form-group row">
			<label asp-for="Color" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Color)
		</div>

		<div class="form-group row">
			<label asp-for="Passengers" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Passengers)
		</div>

		<div class="form-group row">
			<label asp-for="Weight" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Weight)
		</div>

		<div class="form-group row">
			<label asp-for="Manual" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.Manual)
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.EnginePower)
		</div>

		<div class="form-group row">
			<label asp-for="ReleseDate" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.ReleseDate)
		</div>

		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label" ></label>

			@Html.DisplayFor(model => model.CreatedAt)
		</div>


		@foreach (var images in Model.Images)
		{
			<partial name="_Images" model="images" />
		}

	</dl>
	<hr />
</div>


<form asp-action="deleteConfirmation">
	<input type="hidden" asp-for="Id"/>
	<input type="submit" value="Delete" class="btn btn-danger" />
	<a asp-action="index" class="btn btn-primary">Back</a>
</form>
