@model TARge21Shop.Models.OpenWeather.OpenWeatherViewModel

<div class="container">

	<h2>Forecast for the selected city</h2>

	<hr />

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Name)
		</div>

		<div class="form-group row">
			<label asp-for="Temperature" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Temperature)
		</div>

		<div class="form-group row">
			<label asp-for="FeelsLike" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.FeelsLike)
		</div>

		<div class="form-group row">
			<label asp-for="Humidity" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Humidity)
		</div>

		<div class="form-group row">
			<label asp-for="Pressure" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Pressure)
		</div>

		<div class="form-group row">
			<label asp-for="Speed" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Speed)
		</div>

		<div class="form-group row">
			<label asp-for="Main" class="col-sm-2 col-form-label"></label>

			@Html.DisplayFor(model => model.Main)
		</div>

	</dl>

</div>